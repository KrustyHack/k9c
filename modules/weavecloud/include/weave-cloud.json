      "apiVersion": "apps/v1beta1",
      "kind": "Deployment",
      "metadata": {
        "labels": {
          "app": "weave-flux",
          "name": "weave-flux-memcached",
          "weave-cloud-component": "flux",
          "weave-flux-component": "memcached"
        },
        "name": "weave-flux-memcached",
        "namespace": "weave"
      },
      "spec": {
        "replicas": 1,
        "revisionHistoryLimit": 2,
        "template": {
          "metadata": {
            "annotations": {
              "prometheus.io.scrape": "false"
            },
            "labels": {
              "app": "weave-flux",
              "name": "weave-flux-memcached",
              "weave-cloud-component": "flux",
              "weave-flux-component": "memcached"
            }
          },
          "spec": {
            "containers": [
              {
                "args": [
                  "-m 64",
                  "-p 11211"
                ],
                "image": "memcached:1.4.39-alpine",
                "imagePullPolicy": "IfNotPresent",
                "name": "memcached",
                "ports": [
                  {
                    "containerPort": 11211,
                    "name": "clients"
                  }
                ]
              }
            ]
          }
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "labels": {
          "app": "weave-flux",
          "name": "weave-flux-memcached",
          "weave-cloud-component": "flux",
          "weave-flux-component": "memcached"
        },
        "name": "weave-flux-memcached",
        "namespace": "weave"
      },
      "spec": {
        "clusterIP": "None",
        "ports": [
          {
            "name": "memcached",
            "port": 11211
          }
        ],
        "selector": {
          "app": "weave-flux",
          "name": "weave-flux-memcached",
          "weave-cloud-component": "flux",
          "weave-flux-component": "memcached"
        }

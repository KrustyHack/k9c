    {
      "apiVersion": "apps/v1beta1",
      "kind": "Deployment",
      "metadata": {
        "labels": {
          "app": "weave-flux",
          "name": "weave-flux-agent",
          "weave-cloud-component": "flux",
          "weave-flux-component": "agent"
        },
        "name": "weave-flux-agent",
        "namespace": "weave"
      },
      "spec": {
        "replicas": 1,
        "revisionHistoryLimit": 2,
        "strategy": {
          "type": "Recreate"
        },
        "template": {
          "metadata": {
            "labels": {
              "app": "weave-flux",
              "name": "weave-flux-agent",
              "weave-cloud-component": "flux",
              "weave-flux-component": "agent"
            }
          },
          "spec": {
            "containers": [
              {
                "args": [
                  "--token=$(WEAVE_CLOUD_TOKEN)",
                  "--connect=wss://cloud.weave.works./api/flux",
                  "--memcached-hostname=weave-flux-memcached.weave.svc.cluster.local",
                  "--ssh-keygen-dir=/var/fluxd/keygen",
                  "--k8s-secret-name=ssh-git",
                  "--git-url=ssh://git@git-server.ide.svc.cluster.local./~/cluster.git",
                  "--git-branch=master",
                  "--git-poll-interval=30s",
                  "--registry-poll-interval=30s",
                  "--registry-rps=200"
                ],
                "env": [
                  {
                    "name": "WEAVE_CLOUD_TOKEN",
                    "valueFrom": {
                      "secretKeyRef": {
                        "key": "token",
                        "name": "weave-cloud"
                      }
                    }
                  }
                ],
                "image": "quay.io/weaveworks/flux:1.2.5",
                "imagePullPolicy": "IfNotPresent",
                "name": "flux-agent",
                "volumeMounts": [
                  {
                    "name": "ssh-git",
                    "mountPath": "/root/.ssh",
                    "readOnly": true
                  },
                  {
                    "name": "ssh-git",
                    "mountPath": "/etc/flux/ssh",
                    "readOnly": true
                  },
                  {
                    "name": "ssh-keygen",
                    "mountPath": "/var/fluxd/keygen"
                  }
                ]
              }
            ],
            "serviceAccountName": "weave-flux",
            "volumes": [
              {
                "name": "ssh-git",
                "secret": {
                  "secretName": "ssh-git",
                  "defaultMode": 256
                }
              },
              {
                "name": "ssh-keygen",
                "emptyDir": {
                  "medium": "Memory"
                }
              }
            ]
          }
        }
      }
    },

      "apiVersion": "apps/v1beta1",
      "kind": "Deployment",
      "metadata": {
        "labels": {
          "app": "weave-cortex",
          "name": "prometheus",
          "weave-cloud-component": "cortex",
          "weave-cortex-component": "agent"
        },
        "name": "prometheus",
        "namespace": "weave"
      },
      "spec": {
        "replicas": 1,
        "revisionHistoryLimit": 2,
        "template": {
          "metadata": {
            "annotations": {
              "prometheus.io.scrape": "true"
            },
            "labels": {
              "app": "weave-cortex",
              "name": "prometheus",
              "weave-cloud-component": "cortex",
              "weave-cortex-component": "agent"
            }
          },
          "spec": {
            "containers": [
              {
                "args": [
                  "-config.file=/etc/prometheus/prometheus.yml",
                  "-web.listen-address=:8080",
                  {
                    "kubegen.String.Join": [
                      "-web.external-url=http://",
                      { "kubegen.String.Lookup": "external-dns/domain" },
                      "/prometheus"
                    ]
                  }
                ],
                "image": "prom/prometheus:v1.8.2",
                "imagePullPolicy": "IfNotPresent",
                "name": "prometheus",
                "ports": [
                  {
                    "containerPort": 8080,
                    "protocol": "TCP"
                  }
                ],
                "volumeMounts": [
                  {
                    "mountPath": "/etc/weave-cloud",
                    "name": "weave-cloud-secret",
                    "readOnly": true
                  },
                  {
                    "mountPath": "/etc/prometheus",
                    "name": "agent-config-volume"
                  }
                ]
              },
              {
                "args": [
                  "-v",
                  "-t",
                  "-p=/etc/prometheus",
                  "curl",
                  "-X",
                  "POST",
                  "--fail",
                  "-o",
                  "-",
                  "-sS",
                  "http://localhost:8080/-/reload"
                ],
                "image": "quay.io/weaveworks/watch:master-85fdf1d",
                "imagePullPolicy": "IfNotPresent",
                "name": "watch-configmap",
                "volumeMounts": [
                  {
                    "mountPath": "/etc/prometheus",
                    "name": "agent-config-volume"
                  }
                ]
              }
            ],
            "serviceAccountName": "weave-cortex",
            "volumes": [
              {
                "name": "weave-cloud-secret",
                "secret": {
                  "secretName": "weave-cloud"
                }
              },
              {
                "configMap": {
                  "name": "weave-cortex-agent-config"
                },
                "name": "agent-config-volume"
              }
            ]
          }
        }
      }
